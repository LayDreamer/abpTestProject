@page
@using LocalTest.Localization
@using LocalTest.Web.Pages.Families
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model UploadModalModel
@inject IStringLocalizer<LocalTestResource> L
@{
    Layout = null;
}

<abp-dynamic-form abp-model="Id" asp-page="/Families/UploadModal">
    <abp-modal>
        <abp-modal-header title="@L["Upload"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="Id" />
            <abp-input asp-for="UploadFileDto.File"></abp-input>
            <abp-form-content />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>
@page
@using LocalTest.Localization
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model LocalTest.Web.Pages.FamilyLibs.DownloadModalModel
@using Volo.Abp.AspNetCore.Mvc.UI.Theming;
@inject IStringLocalizer<LocalTestResource> L
@inject ITheme CurrentTheme
@{
    Layout = CurrentTheme.GetEmptyLayout();
}
@section scripts
    {
    <abp-script src="/Pages/Files/Index.js" />
}
    <abp-modal>
        <abp-modal-header title="@L["Download"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-column>
                <form id="DownloadFile">
                    <label>@L["ProductName"]</label>
                    <input asp-for="LibDto.DisplayName" disabled="true" class="form-control">
                    <br /><br />
                    <label>@L["FileName"]</label>
                    <input asp-for="LibDto.FilePath" disabled="true" id="fileName" class="form-control">
                    <hr />
                    <input type="submit" class="btn btn-info" />
                </form>
            </abp-column>
        </abp-modal-body>
    </abp-modal>
